<?xml version="1.0" encoding="UTF-8"?>
<web-app version="3.1" xmlns="http://xmlns.jcp.org/xml/ns/javaee" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:schemaLocation="http://xmlns.jcp.org/xml/ns/javaee http://xmlns.jcp.org/xml/ns/javaee/web-app_3_1.xsd">
    <servlet>
        <servlet-name>UserControl</servlet-name>
        <servlet-class>Controllers.UserControl</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>SupermarketControl</servlet-name>
        <servlet-class>Controllers.SupermarketControl</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>CategorieControl</servlet-name>
        <servlet-class>Controllers.CategorieControl</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>ProductControl</servlet-name>
        <servlet-class>Controllers.ProductControl</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>AdminControl</servlet-name>
        <servlet-class>Controllers.AdminControl</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>LivreurControl</servlet-name>
        <servlet-class>Controllers.LivreurControl</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>CommandeController</servlet-name>
        <servlet-class>Controllers.CommandeController</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>LivraisonController</servlet-name>
        <servlet-class>Controllers.LivraisonController</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>UserControl</servlet-name>
        <url-pattern>/UserControl</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>SupermarketControl</servlet-name>
        <url-pattern>/SupermarketControl</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>CategorieControl</servlet-name>
        <url-pattern>/CategorieControl</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>ProductControl</servlet-name>
        <url-pattern>/ProductControl</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>AdminControl</servlet-name>
        <url-pattern>/AdminControl</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>LivreurControl</servlet-name>
        <url-pattern>/LivreurControl</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>CommandeController</servlet-name>
        <url-pattern>/CommandeController</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>LivraisonController</servlet-name>
        <url-pattern>/LivraisonController</url-pattern>
    </servlet-mapping>
    <session-config>
        <session-timeout>
            30
        </session-timeout>
    </session-config>
    <welcome-file-list>
        <welcome-file>login.jsp</welcome-file>
    </welcome-file-list>
</web-app>
